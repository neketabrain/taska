{
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "hosting": {
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "public": "build",
    "rewrites": [
      {
        "destination": "/index.html",
        "source": "**"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
